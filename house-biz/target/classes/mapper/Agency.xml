<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.house.dao.AgencyDao">

    <sql id="agencyField">
          id ,
		  name,
		  address,
		  phone,
		  email,
		  about_us,
		  mobile,
		  web_site
   </sql>
    <!--查询经纪人-->
    <select id="selectAgent" resultType="user" >
        select * from user
        <where>
            enable = 1 and type = 2
            <if test="user.id != null and user.id != 0">
                and id = #{user.id}
            </if>
            <if test="user.userName !=null and user.userName != ''">
                and email = #{user.email}
            </if>
        </where>

        order by id desc
        <!--分页-->
        <if test='pageParams.offset != null and pageParams.limit != null'>
            limit #{pageParams.offset}, #{pageParams.limit}
        </if>
        <if test='pageParams.offset == null and pageParams.limit != null'>
            limit #{pageParams.limit}
        </if>
    </select>
    <!--查询经济人总数-->
    <select id="selectAgentCount" resultType="Integer">
        select count(id)
        from user
        <where>
            enable =1 and type =2
            <if test ="user.id != null and user.id !=0">
                and id = #{user.id}
            </if>
            <if test="user.userName !=null and user.userName != ''">
                and email = #{user.email}
            </if>
        </where>
    </select>

    <!--查询经济机构-->
    <select id="selectAgencyList" resultType="agency">
        select <include refid="agencyField"/>
        from   agency
        <where>
            <if test="id != null and id != 0">
                and id = #{id}
            </if>
            <if test="name != null and name !='' ">
                and email = #{email}
            </if>
        </where>
    </select>


</mapper>